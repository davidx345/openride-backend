# Example environment variables for OpenRide Backend
# Copy this file to .env and update with your values
# ⚠️ NEVER commit .env to version control!

# ====================
# Database Configuration
# ====================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=openride
DATABASE_USER=openride_user
DATABASE_PASSWORD=openride_password
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ====================
# Redis Configuration
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=openride_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ====================
# JWT Configuration
# ====================
JWT_SECRET_KEY=change-this-to-a-very-long-random-string-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# Twilio (SMS/OTP)
# ====================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ====================
# Interswitch (Payments)
# ====================
INTERSWITCH_MERCHANT_ID=your-merchant-id
INTERSWITCH_MERCHANT_CODE=your-merchant-code
INTERSWITCH_API_KEY=your-api-key
INTERSWITCH_WEBHOOK_SECRET=your-webhook-secret
INTERSWITCH_BASE_URL=https://sandbox.interswitchng.com

# ====================
# Firebase (Push Notifications)
# ====================
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# ====================
# SendGrid (Email)
# ====================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@openride.com

# ====================
# Blockchain (Ticketing)
# ====================
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_CONTRACT_ADDRESS=0x...
BLOCKCHAIN_PRIVATE_KEY=your-private-key

# ====================
# Kafka (Analytics)
# ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# ====================
# Application Settings
# ====================
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================
# Service Ports
# ====================
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
BOOKING_SERVICE_PORT=8083
PAYMENTS_SERVICE_PORT=8084
TICKETING_SERVICE_PORT=8085
PAYOUTS_SERVICE_PORT=8086
DRIVER_SERVICE_PORT=8091
MATCHMAKING_SERVICE_PORT=8092
SEARCH_SERVICE_PORT=8093
NOTIFICATION_SERVICE_PORT=8094
ANALYTICS_SERVICE_PORT=8095
FLEET_SERVICE_PORT=8096

# ====================
# Monitoring & Observability
# ====================
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
