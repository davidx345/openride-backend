# Application
APP_NAME=openride-notification-service
APP_ENV=development
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8095

# Database
DATABASE_URL=postgresql+asyncpg://openride_user:openride_password@localhost:5432/openride
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://:openride_redis_password@localhost:6379/3
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://:openride_redis_password@localhost:6379/4
CELERY_RESULT_BACKEND=redis://:openride_redis_password@localhost:6379/5

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256

# Firebase Cloud Messaging (FCM)
FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json
FCM_ENABLED=true

# Termii SMS Configuration
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=OpenRide
TERMII_API_URL=https://api.ng.termii.com/api
TERMII_ENABLED=true

# SendGrid Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@openride.com
SENDGRID_FROM_NAME=OpenRide
SENDGRID_ENABLED=true

# Notification Settings
NOTIFICATION_RETRY_MAX_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY_SECONDS=60
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RATE_LIMIT_PER_USER=50

# Template Settings
TEMPLATE_CACHE_ENABLED=true
TEMPLATE_CACHE_TTL=3600

# Service URLs (for internal communication)
USER_SERVICE_URL=http://localhost:8082
BOOKING_SERVICE_URL=http://localhost:8083

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9095
