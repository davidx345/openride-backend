# Matchmaking Service Configuration

# Service
SERVICE_NAME=matchmaking-service
SERVICE_PORT=8084
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://openride:openride@localhost:5432/openride

# Redis
REDIS_URL=redis://localhost:6379/1
REDIS_CACHE_TTL=300
REDIS_ACTIVE_ROUTES_TTL=60

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
USER_SERVICE_URL=http://localhost:8081
DRIVER_SERVICE_URL=http://localhost:8082

# Matching Configuration
MAX_SEARCH_RADIUS_KM=10.0
DEFAULT_SEARCH_RADIUS_KM=5.0
TIME_WINDOW_MINUTES=15
MAX_CANDIDATE_ROUTES=50

# Scoring Weights (must sum to 1.0)
WEIGHT_ROUTE_MATCH=0.4
WEIGHT_TIME_MATCH=0.3
WEIGHT_RATING=0.2
WEIGHT_PRICE=0.1

# Performance
MAX_DB_CONNECTIONS=50
MIN_DB_CONNECTIONS=10
DB_POOL_RECYCLE=3600
PERFORMANCE_TARGET_MS=200

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
