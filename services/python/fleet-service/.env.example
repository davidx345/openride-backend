# Environment
ENV=development

# Database
DATABASE_URL=postgresql+asyncpg://openride_user:openride_password@postgres:5432/openride

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=openride_redis_password

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Service Configuration
SERVICE_NAME=fleet-service
LOG_LEVEL=INFO
PORT=8096

# WebSocket
SOCKETIO_PATH=/socket.io
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Rate Limiting
LOCATION_UPDATE_RATE_LIMIT=5
MAX_CONNECTIONS_PER_DRIVER=3
MAX_LOCATION_HISTORY_DAYS=30

# Performance
WORKER_CONNECTIONS=1000
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
REDIS_MAX_CONNECTIONS=50

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9096
